
<div class="row" id="library-header">
<a class="btn" data-toggle="modal" href="#addItem" >Add Item</a>
  <span class="pull-right"><%= link_to "Public Link", public_library_path(:user_id => current_user.id) %></span>
  <br />
  <h2>Drag your pins to the right category!</h2>
</div>

<div class="row" id="pin-kanban">
  <div class="span4">
    <div class="board">
      <h2>To learn</h2>
      <hr />
      <div id="todo-items" data-status="todo" class="sortable-board">
        <%= render @pins.todo %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="board">
      <h2>Learning</h2>
      <hr />
      <div id="doing-items" data-status="doing" class="sortable-board">
        <%= render @pins.doing %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

  <div class="span4">
    <div class="board">
      <h2>Learned</h2>
      <hr />
      <div id="done-items" data-status="done" class="sortable-board">
        <%= render @pins.done %>
        <div>&nbsp;</div>
      </div>
    </div>
  </div>

</div>


<div id="addItem" class="modal hide">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Add an item</h3>
  </div>
  <div class="modal-body">

    <%= render 'items/form' %>

  </div>
</div>

